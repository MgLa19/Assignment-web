                    @Html.EditorFor(model => model.Total_price, new { htmlAttributes = new { @class = "form-control", id = "display", disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.Total_price, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Order" class="btn btn-default" />
                    @Html.ActionLink("Show Record", "Index", null, new { @class = "btn btn-default" })
                    @Html.ActionLink("Go Back", null, null, null, new { href = Request.UrlReferrer, @class = "btn btn-default" })
                </div>
            </div>
        </div>


        }

        <script>
    var input1 =@ViewBag.price;
    var input2 =@ViewBag.guest;
    var result = input1 * input2;
    document.getElementById('display').value = result;
        </script>
    </div>