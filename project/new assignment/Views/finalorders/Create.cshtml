                    @Html.EditorFor(model => model.Party_time, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Party_time, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Total_price, htmlAttributes: new { @class = "control-label col-md-2" })
